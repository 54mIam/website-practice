

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fontawesome.com/kits/aeecb58b9d">
    <link rel="stylesheet" href="./css/headerFooter.css">
    <link rel="stylesheet" href="./css/index.css">
    <title>Document</title>
</head>
<body>
   
    <%-include('./partials/header')  %>

    
       

        <div class="main-container">
            <div class="page-info">
                <div class="index-title">
                    <h1 class="main-title">Home Page</h1>

                </div>
                <div class="index-paragraph">
                    <p class="main-paragraph">Welcome to the home page</p>
                </div> 
               
               
            </div>

            
            <div class="webpage-container">
                <ul class="main-webpage-list">
                    <% webPages.forEach((page) =>{ %>
                     <div class="webpage-thumb">
                        <li class="webpage">
                            <img class="webpage-image"  src="./images/<%= page.image  %>" alt="auther"><a href="pages/<%= page.id  %>" class="webpage-link">
                            <%= page.title %>
                        </a></li>

                     </div>
                            
                        
                     
                        
                        
                        <%  }) %>
                </ul>
            
            </div>
        </div>
       
    

        <%-include('./partials/footer')  %>
   

</body>
</html>